import regex from 'regexparser';

const router = regex`
	^BGP router identifier ${ROUTER_ID}, local AS number ${LOCAL_AS}
	^${REMOTE_IP}\s+${REMOTE_AS}(${\s+\S+}){5}\s+${UP_TIME}\s+${RECEIVED_V4}
	^${REMOTE_IP}\s+${REMOTE_AS}(${\s+\S+}){5}\s+${UP_TIME}\s+${STATUS}
`;

// Assuming that Next.Record is a known event handler,
// you can use it like this:
router.on('Next.Record', (data) => {
  // process the data
});